@using  TodoCore.Models
@using  Humanizer
@model TodoViewModel

@{
    ViewData["Title"] = "Manage your Todo List";
}

<div class="panel pannel-default todo-panel">
    <div class="panel-heading">@ViewData["Title"]</div>

    <table class="table table-hover">
        <thead>
            <tr>
                <td>&#x2714;</td>
                <td>ID</td>
                <td>Item</td>
                <td>Due</td>
                <td>Type</td>
                <td>Steps</td>
            </tr>
        </thead>

        @foreach (var item in Model.Items)
        {
            <tr>
                <td>
                    <form asp-action="MarkDone" method="post">
                        <input type="checkbox" class="done-checkbox" />
                        <input type="hidden" name="id" value="@item.Id" />
                    </form>
                </td>
                <td>@item.Title</td>
                <td>@item.DueAt.Humanize()</td>
                <td>@item.Type</td>
                <td>
                    <h5>Steps:</h5>
                    <ul>
                        @foreach (var step in item.Steps)
                        {
                            <li>
                                <form asp-action="ToggleStepIsDone" method="post">
                                    <input type="checkbox" checked="@step.IsDone" class="stepdone-checkbox" />
                                    <input type="hidden" name="id" value="@step.Id" />
                                    @step.Title
                                </form>
                            </li>
                        }
                    </ul>
                    @{
                        var newStep = new TodoStep(item);                        
                        <form asp-action="AddStep" method="post">
                            <label asp-for="@newStep.Title">Add a new step:</label >
                            <input asp-for="@newStep.Title" />
                            <input type="hidden" name="id" value="@item.Id" />                                                   
                            <button type="submit">Add</button>
                        </form >
                    }
                </td>
            </tr>
        }
    </table>

    <div class="panel-footer add-item-form">
        <!-- todo: add item form-->
        @await Html.PartialAsync("AddItemPartial", new TodoItem())
    </div>
</div>

